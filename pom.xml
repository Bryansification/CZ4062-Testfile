<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.blackducksoftware.test</groupId>
  <artifactId>example-maven-travis</artifactId>
  <version>0.1.0-SNAPSHOT</version>

  <name>Black Duck CoPilot Example for Maven/Travis CI</name>
  <description>Provide an example of configuring a Maven project to use the Black Duck CoPilot application</description>
  <url>https://github.com/BlackDuckCoPilot/example-maven-travis</url>
  <inceptionYear>2017</inceptionYear>

  <scm>
    <connection>scm:git:git://github.com/blackducksoftware/hub-common.git/</connection>
    <developerConnection>scm:git:git@github.com:BlackDuckCoPilot/example-maven-travis.git</developerConnection>
    <url>https://github.com/BlackDuckCoPilot/example-maven-travis</url>
  </scm>

  <properties>
    <maven.compiler.source>1.8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
	
  <dependencies>
 	  
<dependency>
    <groupId>org.jboss.resteasy</groupId>
    <artifactId>resteasy-jaxrs</artifactId>
    <version>2.2.1.GA</version>
</dependency>
<dependency>
    <groupId>org.apache.camel</groupId>
    <artifactId>camel-jackson</artifactId>
    <version>2.16.1</version>
    <scope>test</scope>
</dependency>
<dependency>
    <groupId>org.jenkins-ci.main</groupId>
    <artifactId>jenkins-core</artifactId>
    <version>1.420</version>
    <scope>provided</scope>
</dependency>
<dependency>
    <groupId>org.apache.tomcat</groupId>
    <artifactId>apache-tomcat</artifactId>
    <version>5.5.20</version>
</dependency>

  </dependencies>
	<repositories>
<repository>
	  <id>maven</id>
      <name>test3</name>
      <url>https://repo.maven.apache.org/maven2/</url>
  </repository>
  <repository>
	  <id>jboss</id>
      <name>test5</name>
      <url>https://repository.jboss.org/nexus/content/repositories/ea/</url>
  </repository>
   <repository>
      <id>repo.jenkins-ci.org</id>
      <url>http://repo.jenkins-ci.org/public/</url>
      <!-- allow snapshots -->
    </repository>
  
  <repository>
	  <id>spring</id>
      <name>test</name>
      <url>https://repo.spring.io/libs-release/</url>
  </repository>
  </repositories>
<pluginRepositories>
    <pluginRepository>
      <id>Codehaus Snapshots</id>
      <url>http://snapshots.repository.codehaus.org/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <releases>
        <enabled>true</enabled>  <!-- Workaround for MNG-2974, see note below -->
      </releases>
    </pluginRepository>
  </pluginRepositories> 
  <build>
        <plugins>
            <plugin>
              <groupId>org.owasp</groupId>
              <artifactId>dependency-check-maven</artifactId>
              <version>3.3.4</version>
              <executions>
                  <execution>
                      <goals>
                          <goal>check</goal>
                      </goals>
                  </execution>
               </executions>
            </plugin>
	  
	    <plugin>
      		<groupId>org.sonatype.ossindex.maven</groupId>
      		<artifactId>ossindex-maven-plugin</artifactId>
		<version>3.0.1</version>
      		<executions>
       		   <execution>
          		<id>audit-dependencies</id>
          		<phase>validate</phase>
          		<goals>
            		  <goal>audit</goal>
          		</goals>
        	  </execution>
      		</executions>
    	   </plugin>
	
        </plugins>
    </build>
</project>
